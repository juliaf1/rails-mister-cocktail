<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-8 col-lg-6">
      <h1><%= @cocktail.name %></h1>

      <% @cocktail.doses.each do |dose| %>
        <p>
          <span class="dose-description"><%= dose.description %></span>
          <%= dose.ingredient.name %>
          <%= link_to icon('fas', 'pencil-alt'), edit_cocktail_dose_path(@cocktail, dose), class: 'icon' %>
          <%= link_to icon('fas', 'trash-alt'), dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class: 'icon' %>
        </p>
      <% end %>

      <div class="mt-5">
        <h2>Add a new ingredient</h2>
        <%= render "doses/new", cocktail: @cocktail, dose: @dose %>
      </div>
    </div>
  </div>
</div>
